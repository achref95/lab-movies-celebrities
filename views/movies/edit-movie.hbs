<h2>Edit Movie</h2>
<form action="/movies/{{ movie._id }}/edit" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{ movie.title }}" required>

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="{{ movie.genre }}" required>

  <label for="plot">Plot:</label>
  <textarea name="plot" id="plot" required>{{ movie.plot }}</textarea>

  <label for="cast">Cast:</label>
  <select name="cast" id="cast" multiple required>
    {{#each movie.cast}}
      <option value="{{ this._id }}" selected>{{ this.name }}</option>
    {{/each}}
    {{#each celebrities}}
      {{#unless (arrayIncludes movie.cast this._id)}}
        <option value="{{ this._id }}">{{ this.name }}</option>
      {{/unless}}
    {{/each}}
  </select>

  <p>Hold down the Ctrl (Windows) or Command (Mac) button to select multiple options.</p>

  <br><br>
  <input type="submit" value="Save Changes">
</form>